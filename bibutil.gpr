project Bibutil is

   for Source_Dirs use ("src");
   for Object_Dir use "obj";
   for Exec_Dir use "bin";
   for Main use ("bib_sort.adb");

   package Compiler is
      for Default_Switches ("ada") use ("-gnat12", "-gnatf", "-gnata", "-g");
   end Compiler;

   package Builder is
      for Default_Switches ("ada") use ("-g", "-j4");
   end Builder;

end Bibutil;

